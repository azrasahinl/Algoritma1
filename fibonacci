package newpackage;
public class algoornek10 {


    public static void main(String[] args) {
        int n = 5; 
        int toplam = bul(n);
        System.out.println("Seri ToplamÄ±: " + toplam);
    }

    static int bul(int n) {
        int toplam = 0;
        int term = 1;

        for (int i = 0; i <= n; i++) {
            toplam += term;
            term *= 2;
        }

        return toplam;
    }
}
